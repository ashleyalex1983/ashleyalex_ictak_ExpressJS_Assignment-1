	<body  style="background-color: rgba(143, 177, 252, 0.8);">
<header class="navbar navbar-bright navbar-fixed-top" role="banner">
  <div class="container">
    <div class="navbar-header">
      <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand">Home</a>
    </div>
    <nav class="collapse navbar-collapse" role="navigation">
      <%for(i=0;i<nav.length;i++){%>
      <ul class="nav navbar-nav">
        <li>
          <a href="<%=nav[i].link%>"><%=nav[i].name%></a>
        </li>
      </ul>
      <%}%>
    </nav>
  </div>
</header>


<div class="container" >
  <div class="row g-3" style="align-content: center;">
    <div class="col-md-3"></div>
    <div class="col-md-6"> 
      <div class="form-panel" style="width: fit-content;">
        <!-- signup form -->
        <div class="box signup-form  form-container">
          <h2 class="form-heading">Sign-up an account</h2>
          <hr>
          <form class="form" id="form" action="" >
            <div class="row"  style="display: inline-flex;">
                <div class="col">
                    <div class="form_control">
                        <label for="">First Name</label>
                        <sup>*</sup>
                        <input type="text" placeholder="Enter First Name" id="first-name" >
                        <p>Error message</p>
                    </div>
                </div> &nbsp;&nbsp;&nbsp;
                <div class="col">
                    <div class="form_control">
                        <label for="">Last Name</label>
                        <sup>*</sup>
                        <input type="text" placeholder="Enter Last Name" id="last-name">
                        <p>Error message</p>
                    </div>
                </div>
            </div>
                <div class="form_control">
                    <label for="">Email Address</label>
                    <sup>*</sup>
                    <input type="text" placeholder="Enter Email Address" id="email" autocomplete="off" style="width:100%;">
                    <p>Error message</p>
                </div>
                <div class="form_control">
                    <label for="">Username</label>
                    <sup>*</sup>
                    <input type="text" placeholder="Enter Username" id="username" style="width: 100%;">
                    <p>Error message</p>
                </div>
                <div class="form_control">
                    <label for="">Password</label>
                    <sup>*</sup>
                    <input type="password" placeholder="Enter Password" id="password" style="width: 100%;">
                    <p>Error message</p><br>
                    <div class="popover-password">
                        <p><span id="result"></span></p>
                        <div class="progress">
                            <div id="password-strength" class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
                        </div>
                    </div><br>
                    <ul class="list-unstyled">
                        <li>
                            <span class="low-upper-case">
                                Lowercase &amp; Uppercase
                            </span>
                        </li>
                        <li>
                            <span class="one-number">
                                Numbers (0-9)
                            </span>
                        </li>
                        <li>
                            <span class="one-special-char">
                                Special characters (@$!%*?&)
                            </span>
                        </li>
                        <li>
                            <span class="eight-character">
                                Atleast 8 characters
                            </span>
                        </li>
                    </ul>
                </div>
                <div class="form_control">
                    <label for="">Confirm Password</label>
                    <sup>*</sup>
                    <input  type="password" placeholder="Retype Password" id="password2" style="width: 100%;">
                    <i class="fas fa-check-circle"></i>
                    <i class="fas fa-exclamation-circle"></i>
                    <p>Error message</p>
                </div>
                <div class="form-group">
                    <div class="form-check" style="display: inline-flex;" >
                      <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                      <p class="form-check-label" >
                        &nbsp;  Agree to terms and conditions<sup>*</sup>
                      </p>
                    </div>
                  </div>
                <button class="btn btn-primary" type="submit">Submit</button>
                <br>
                <label><a class="login-link" href="/login" > Click here</a>  to login to your account.</label>
          </form>
        </div>
        <!-- signup form -->
      </div>
    </div><!--/col-6-->    
    <div class="col-md-3"></div>
  </div>
</div>
                                                
                                                                                
